    "def reversePerKata(kalimat):\n",
    "    kata = kalimat.split() 
    "    hasil = []\n",
    "    for k in kata :\n",
    "        hasil.append(k[::-1])\n",
    "    return ' ' .join(hasil)"
   ]
  },
  {
   "cell_type": "code",
