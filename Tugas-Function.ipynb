    "def urutanKalimat(kalimat, urutan):\n",
    "    kata = kalimat.split() 
    "    hasil = []\n",
    "    for i in urutan :\n",
    "        hasil.append(kata[i - 1])\n",
    "    return ' '.join(hasil)\n"
   ]
  },
